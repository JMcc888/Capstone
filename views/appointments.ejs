<%- include('partials/header') %>
<%- include('partials/navs/indexnav') %>

<div class="appointments-title">
<h1 class="jumbotron appointments-title-text">Appointment Requests</h1>
<p class="appointments-title-p">Here are your current pending appointments</p>
</div>
<% data.forEach((ap) => { %>
    <div class="appointment-container">
    <div class="appointment card">
        <!-- data separated -->
        <div class="card-header">
       <p class="ap-name">Appointment for <%=ap.name %></p>
       <a class="ap-edit" href="/appointments/view/<%= ap._id %>">
        <p class="ap-edit">Details</p>
        </a>
        </div>
        <div class="card-body">
        <p class="ap-email">email address: <%=ap.email %></p>
        <p class="ap-service"> <%=ap.name %> is requesting a <%=ap.service %></p>
        <p class="ap-hours">Appointment for <%=ap.hours %> hours </p>
        <p class="ap-conf">Confirmation is <%=ap.confirmation %></p>
        <p class="ap-date">Scheduled for <%=ap.date %></p>
    </div>
    </div>
</div>
<% }) %>
<%- include('partials/footer') %>